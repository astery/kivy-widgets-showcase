<CTextInput@TextInput>:
    size_hint_y: None
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    height: '32dp'
    multiline: False
    hint_text: 'Enter param value'

<CButton@Button>:
    size_hint: (None, None)
    height: '32dp'
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<CDropDown@DropDown>:
    size_hint: (None, None)
    height: '32dp'

<ParamInput>:
    padding: [10, 0, 10, 0]
    spacing: 10

    Label:
        size_hint_x: 0.2
        text: root.label_text

<ParamInputText>:
    CTextInput:
        on_text: root.set_value(args[1])

<ParamInputDropdown>:
    on_value: text_input.text = self.get_value()

    BoxLayout:
        CTextInput:
            id: text_input
            on_text: root.set_value(args[1])

        CButton:
            text: 'Choose'
            on_release: dropdown.open(self)

        CDropDown:
            id: dropdown
            on_parent: self.dismiss()
            on_select: root.set_value(args[1])

            CButton:
                text: 'Value 1'
                on_release: dropdown.select('Value 1')
            CButton:
                text: 'Value 2'
                on_release: dropdown.select('Value 2')
            CButton:
                text: 'Value 3'
                on_release: dropdown.select('Value 3')

<ParamInputBoolean>:
    value: 'False'
    Switch:
        active: False
        on_active: root.set_value(str(args[1]))

<ParamInputPopup>:
    on_value: text_input.text = self.get_value()

    BoxLayout:
        id: box_layout

        CTextInput:
            id: text_input
            on_text: root.set_value(args[1])

        CButton:
            text: 'Open popup'
            on_release: popup.open()

        Popup:
            id: popup
            title: 'Popup window'
            on_parent: if self.parent == box_layout: self.parent.remove_widget(self)
            GridLayout:
                cols: 2

                Button:
                    text: 'Value 1'
                    on_release: root.set_value('Value 1'); popup.dismiss()
                Button:
                    text: 'Value 2'
                    on_release: root.set_value('Value 2'); popup.dismiss()
                Button:
                    text: 'Value 3'
                    on_release: root.set_value('Value 3'); popup.dismiss()

                Button:
                    text: 'Dismiss'
                    on_release: popup.dismiss()

<ParamInputBrowseFile>:
    on_value: text_input.text = self.get_value()

    BoxLayout:
        id: box_layout

        CTextInput:
            id: text_input
            on_text: root.set_value(args[1])

        CButton:
            text: 'Choose file'
            on_release: popup.open()

        Popup:
            id: popup
            title: 'Popup window'
            on_parent: if self.parent == box_layout: self.parent.remove_widget(self)
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    size_hint_y: None
                    height: '32dp'

                    Button:
                        text: 'Choose'
                    Button:
                        text: 'Dismiss'
                        on_release: popup.dismiss()

                FileChooser:
                    id: file_chooser
                    FileChooserListLayout

<FormPanel>:
    orientation: 'vertical'
    Label:
        size_hint_y: None
        text: 'Widgets Showcase'
        font_size: '26dp'
  
    BoxLayout:
        orientation: 'vertical'

        ParamInputText:
            id: 'text_param'
            label_text: 'Text param'

        ParamInputDropdown:
            id: 'dropdown_param'
            label_text: 'Dropdown param'

        ParamInputBoolean:
            id: 'boolean_param'
            label_text: 'Boolean param'

        ParamInputPopup:
            id: 'popup_param'
            label_text: 'Popup param'

        ParamInputBrowseFile:
            id: 'file_param'
            label_text: 'File param'
        
        CButton:
            text: 'Send'

            on_release: root.send_params()
